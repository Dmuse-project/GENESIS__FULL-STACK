<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>
<body>
    <h1>Edit blogs</h1>
    <form action="/admin/blog/<%=blogs.id%>?_method=PUT"  method="POST"  enctype="multipart/form-data">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title"  name="title"  placeholder="Title"  value="<%=blogs.title %>">
        </div>
        <div>
            <label for="author">Author</label>
            <input type="text" id="author"  name="author"  placeholder=" Author name" value="<%=blogs.author%>">
        </div>
    
        <div>
            <label for="category">Category</label>
            <select name="category" id="category">

                <%for(category of categories) { %>
                    <option value="<%=category%>" <%=blogs.category === category ? 'selected' : '' %>><%=category%></option>
                    
               <% } %>
            
            </select>

        </div>

        <div>
            <label for="tag">filter</label>
            <select name="tag" id="tag">
                <%for(t of tag) { %>
                    <option value="<%=t%>" <%=blogs.t === t ? 'selected' : '' %>><%=t%></option>
                    
               <% } %>

             
            </select>
           </div>

           <div>
            <label for="description">Content</label> <br>
     
            <textarea name="description" id="description" cols="100" rows="15" placeholder="What are we writing today"><%=blogs.description%></textarea>       
       </div>

       <div class="form-group">
        <label for="image"> Add More Images</label>
        <input type="file"  id="image" name="image"   placeholder="Upload image" multiple  >
      </div>
      
      <div class="mb-3 holding-images-to-delete">
        <% blogs.image.forEach((img, index) => { %>
          <div class="grid-item" id="image-container-<%= index %>">
            <img src="<%= img.thumbnail %> " class="" alt="">
          <div>
            <input type="checkbox" id="image-<%= index %>" name="deleteImages[]" value="<%= img.filename %>">
            <label for="image-<%= index %>">Delete?</label>
          </div>
          </div>
        <% }) %>
      </div>
      
      <!-- Delete button -->
      <button id="delete-selected-btn"  class="btn btn-danger">Delete Selected Images</button>

       
        <button>Upload Blog</button>
    </form>
    <br>

    <a href="/admin/blog/<%=blogs.id%>">Back</a>
    
</body>
</html>