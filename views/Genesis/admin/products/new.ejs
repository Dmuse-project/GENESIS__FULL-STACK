

  <section>
    <form action="/admin/product" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" name="name"  id="name", placeholder="Product Name" required>
      </div>
      <div class="form-group">
        <label for="category">category</label>
        <select name="category" id="category">'
          <% for(let category of categories) { %> 
            <option value="<%=category%>" <%=products.category === category ? "selected": "" %>><%=category %></option>
         <% } %> 
        </select>
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input type="number" name="price"  id="price" placeholder="Product Price" required>
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <br>
        <textarea name="description" name="description" id="description" cols="50" rows="5"></textarea>
      </div>

      <div class="form-group">
        <label for="image"> Upload Image</label>
        <input type="file"  id="image" name="image"  accept="image/*" placeholder="Upload image" required>
      </div>

      
      <button>Submit</button>


    </form>

    <a href="/admin#PRODUCT"> Back</a>
  </section>

